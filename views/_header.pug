header.header
    nav.nav.nav--tours
        a.nav__el(href="/") All tours
    // No need for <div> just .
    .header__logo
        img(src="/img/logo-white.png", alt="natours logo")
    nav.nav.nav--user
        if user
            a.nav__el.nav__el--logout(href="/api/v1/users/logout") Logout
            a.nav__el(href="/me") 
                img.nav__user-img(src=`/img/users/${user.photo}`, alt=`${user.name}`)
                span= user.name.split(' ')[0]
        else
            a.nav__el(href='/login') Login
            button.nav__el.nav__el--cta Sign Up